{
  "name": "@cyrus/codemirror-markdown-hybrid",
  "version": "1.0.0",
  "description": "Enhanced CodeMirror 6 hybrid markdown editor with wiki-links, YAML frontmatter, and extended markdown support",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --emitDeclarationOnly",
    "build:lib": "vite build -c vite.lib.config.js",
    "preview": "vite preview",
    "test": "playwright test"
  },
  "keywords": [
    "codemirror",
    "codemirror6",
    "markdown",
    "editor",
    "hybrid",
    "wiki-links",
    "yaml-frontmatter"
  ],
  "author": "Cyrus (forked from tiagosimoes)",
  "license": "MIT",
  "dependencies": {
    "@codemirror/state": "^6.4.0",
    "@codemirror/view": "^6.23.0",
    "@codemirror/language": "^6.10.0",
    "@codemirror/commands": "^6.3.3",
    "@codemirror/lang-markdown": "^6.2.4",
    "@codemirror/lang-html": "^6.4.8",
    "@codemirror/lang-javascript": "^6.2.1",
    "@codemirror/autocomplete": "^6.12.0",
    "@lezer/common": "^1.2.0",
    "@lezer/highlight": "^1.2.0",
    "@lezer/markdown": "^1.2.0",
    "@lezer/lr": "^1.4.0",
    "katex": "^0.16.9",
    "mermaid": "^10.6.1",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/katex": "^0.16.7",
    "@types/js-yaml": "^4.0.9",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  }
}
