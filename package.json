{
  "name": "codemirror-for-writers",
  "version": "1.3.0",
  "type": "module",
  "description": "A CodeMirror 6 extension for hybrid markdown editing - shows rendered preview for unfocused lines and raw markdown for the line being edited",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "lib"
  ],
  "scripts": {
    "dev": "vite demo",
    "build": "vite build",
    "build:lib": "vite build --config vite.lib.config.js",
    "preview": "vite preview demo",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "demo:record": "node demo-video/demo-recording.js"
  },
  "keywords": [
    "codemirror",
    "codemirror6",
    "markdown",
    "editor",
    "preview",
    "hybrid",
    "wysiwyg"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dwaynemcyrus/codemirror-for-writers"
  },
  "peerDependencies": {
    "@codemirror/commands": "^6.0.0",
    "@codemirror/lang-markdown": "^6.0.0",
    "@codemirror/state": "^6.0.0",
    "@codemirror/view": "^6.0.0"
  },
  "dependencies": {
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.11",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/language": "^6.12.1",
    "@lezer/highlight": "^1.2.3",
    "katex": "^0.16.27",
    "markdown-it": "^14.1.0",
    "markdown-it-emoji": "^3.0.0",
    "mermaid": "^11.12.2"
  },
  "devDependencies": {
    "@codemirror/autocomplete": "^6.20.0",
    "@codemirror/commands": "^6.6.0",
    "@codemirror/lang-markdown": "^6.3.0",
    "@codemirror/state": "^6.4.0",
    "@codemirror/view": "^6.33.0",
    "@playwright/test": "^1.58.0",
    "puppeteer": "^24.36.0",
    "vite": "^5.4.0"
  }
}
