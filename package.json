{
  "name": "codemirror-for-writers",
  "version": "1.11.1",
  "type": "module",
  "description": "A CodeMirror 6 extension for hybrid markdown editing - shows rendered preview for unfocused lines and raw markdown for the line being edited",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "vite --config vite.config.js --host 127.0.0.1 --port 4173",
    "build": "vite build",
    "build:lib": "vite build --config vite.lib.config.js && cp lib/index.d.ts dist/index.d.ts",
    "prepare": "test -f dist/index.js || npm run build:lib",
    "prepublishOnly": "npm run build:lib",
    "preview": "vite preview --config vite.config.js --host 127.0.0.1 --port 4173",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "demo:record": "node demo-video/demo-recording.js"
  },
  "keywords": [
    "codemirror",
    "codemirror6",
    "markdown",
    "editor",
    "preview",
    "hybrid",
    "wysiwyg",
    "writing",
    "wiki-links",
    "frontmatter"
  ],
  "author": "Dwayne M Cyrus (https://github.com/dwaynemcyrus)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dwaynemcyrus/codemirror-for-writers.git"
  },
  "bugs": {
    "url": "https://github.com/dwaynemcyrus/codemirror-for-writers/issues"
  },
  "homepage": "https://dwaynemcyrus.github.io/codemirror-for-writers/",
  "sideEffects": false,
  "peerDependencies": {
    "@codemirror/autocomplete": "^6.0.0",
    "@codemirror/commands": "^6.0.0",
    "@codemirror/lang-markdown": "^6.0.0",
    "@codemirror/search": "^6.0.0",
    "@codemirror/state": "^6.0.0",
    "@codemirror/view": "^6.0.0",
    "katex": "^0.16.0",
    "mermaid": "^11.0.0"
  },
  "peerDependenciesMeta": {
    "@codemirror/autocomplete": {
      "optional": true
    },
    "katex": {
      "optional": true
    },
    "mermaid": {
      "optional": true
    }
  },
  "dependencies": {
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.11",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/language": "^6.12.1",
    "@lezer/highlight": "^1.2.3",
    "js-yaml": "^4.1.1",
    "markdown-it": "^14.1.0",
    "markdown-it-emoji": "^3.0.0"
  },
  "devDependencies": {
    "@codemirror/autocomplete": "^6.20.0",
    "@codemirror/commands": "^6.6.0",
    "@codemirror/lang-markdown": "^6.3.0",
    "@codemirror/search": "^6.6.0",
    "@codemirror/state": "^6.4.0",
    "@codemirror/view": "^6.33.0",
    "@playwright/test": "^1.58.0",
    "katex": "^0.16.27",
    "mermaid": "^11.12.2",
    "puppeteer": "^24.36.0",
    "vite": "^5.4.0"
  }
}
